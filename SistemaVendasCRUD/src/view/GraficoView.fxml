<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GraficoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER" spacing="15.0">
        <Label text="Período:" />
        <ComboBox fx:id="comboPeriodo" prefWidth="150.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Últimos 6 meses" />
                    <String fx:value="Últimos 12 meses" />
                    <String fx:value="Todo o período" />
                </FXCollections>
            </items>
            <value>
                <String fx:value="Últimos 6 meses" />
            </value>
        </ComboBox>
        <Button onAction="#initialize" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Atualizar Gráfico" />
    </HBox>

    <BarChart fx:id="barChart" animated="true" legendVisible="false" prefHeight="400.0" prefWidth="600.0" title="Vendas por Mês">
        <xAxis>
            <CategoryAxis fx:id="xAxis" label="Mês" side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Valor (R$)" side="LEFT" />
        </yAxis>
    </BarChart>

    <HBox alignment="CENTER" spacing="30.0">
        <VBox alignment="CENTER">
            <Label text="Total Geral" />
            <Label fx:id="lblTotalGeral" style="-fx-text-fill: green; -fx-font-weight: bold; -fx-font-size: 14px;" text="R$ 0,00" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Média Mensal" />
            <Label fx:id="lblMediaMensal" style="-fx-text-fill: orange; -fx-font-weight: bold; -fx-font-size: 14px;" text="R$ 0,00" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Melhor Mês" />
            <Label fx:id="lblMelhorMes" style="-fx-text-fill: red; -fx-font-weight: bold; -fx-font-size: 14px;" text="--" />
        </VBox>
    </HBox>

    <Label style="-fx-text-fill: gray; -fx-font-size: 10px;" text="Sistema de Vendas - Análise Gráfica" />
</VBox>